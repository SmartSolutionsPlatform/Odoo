<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="ssp_no_config">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="alert alert-warning">
                    <h3>⚠️ SSP Not Configured</h3>
                    <p>Please configure Smart Solutions Platform first.</p>
                    <a href="/web#action=ssp_connector.action_ssp_config" class="btn btn-primary">
                        Configure Now
                    </a>
                </div>
            </div>
        </t>
    </template>

    <template id="ssp_no_token">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="alert alert-danger">
                    <h3>⚠️ SSO Token Missing</h3>
                    <p>Your SSP configuration is missing the SSO token.</p>
                    <p>Please delete and recreate your SSP configuration to generate a new token.</p>
                    <a href="/web#action=ssp_connector.action_ssp_config" class="btn btn-primary">
                        Go to Configuration
                    </a>
                </div>
            </div>
        </t>
    </template>
</odoo>
