<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ssp_connector.SSPDashboard" owl="1">
        <div class="h-100 w-100 d-flex flex-column" style="overflow: hidden;">
            <div class="d-flex justify-content-between align-items-center p-2 bg-view border-bottom">
                <h4 class="m-0">Smart Solutions Platform</h4>
                <button t-on-click="openInNewTab" class="btn btn-secondary btn-sm">
                    <i class="fa fa-external-link me-1"/> Open in New Tab
                </button>
            </div>
            <iframe t-att-src="url" 
                    class="flex-grow-1"
                    width="100%" 
                    height="100%" 
                    frameborder="0" 
                    sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-modals"
                    allow="clipboard-read; clipboard-write; fullscreen"
                    allowfullscreen="true"/>
        </div>
    </t>
</templates>
